---
import AuthLayout from "../../layouts/AuthLayout.astro";
---

<AuthLayout title="Signin">
    <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8 border mt-20 rounded-lg">
        <div class="mx-auto max-w-lg text-center mt-10">
            <div class="sm:mx-auto sm:w-full sm:max-w-sm">
                <img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
            </div>
          <h1 class="text-2xl font-bold sm:text-3xl mt-10">Get started today!</h1>
      
          <p class="mt-4 text-gray-500">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Et libero nulla eaque error neque
            ipsa culpa autem
          </p>
        </div>
      
        <form action="" class="mx-auto mb-0 mt-8 max-w-md space-y-4">
          <div>
            <label for="email" class="sr-only">Email</label>
      
            <div class="relative">
              <input
                type="email"
                class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm font-semibold"
                placeholder="Enter email"
              />
            </div>
          </div>
     
          <button
          type="submit"
          class="w-full inline-block rounded-lg bg-blue-500 px-5 py-3 text-sm font-medium text-white font-semibold mt-10"
        >
          Sign in
        </button>

              
        <div class="flex items-center justify-between">
            <p class="text-sm text-gray-500 text-center w-full">
              <a class="font-semibold hover:text-gray-700" href="./signin"><i class="fa-solid fa-arrow-left"></i> Back to Login</a>
            </p>
          </div>
        </form>
    </div>    
</AuthLayout>

