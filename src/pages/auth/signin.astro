            <label for="password" class="sr-only">Password</label>
      
            <div class="relative">
              <input
                type="password"
                name="password"
                class="w-full rounded-lg border-gray-200 p-4 pe-12 text-sm shadow-sm font-semibold"
                placeholder="Enter password"
                id="password"
              />
      
              <span class="absolute inset-y-0 end-0 grid place-content-center px-4">
                <svg
